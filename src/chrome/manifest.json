{
  "manifest_version": 2,
  "name": "Qiita Notifications",
  "version": "0.1.1",
  "description": "__MSG_applicationDescription__",
  "author": "Increments Inc.",
  "short_name": "Qiita Notifications",
  "default_locale": "en",
  "icons": {
    "16": "images/icon16.png",
    "48": "images/icon48.png",
    "128": "images/icon128.png"
  },
  "background": {
    "persistent": false,
    "scripts": [
      "js/background.js"
    ]
  },
  "browser_action": {
    "default_icon": {
      "19": "images/icon19.png"
    },
    "default_title": "Qiita Notifications",
    "default_popup": "html/popup.html"
  },
  "permissions": [
    "alarms",
    "cookies",
    "tabs",
    "https://qiita.com/*"
  ]
}
