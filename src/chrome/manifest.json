{
  "manifest_version": 2,
  "name": "Qiita",
  "version": "0.0.1",
  "description": "Official browser extensions for Qiita and Qiita:Team.",
  "author": "Increments Inc.",
  "short_name": "Qiita",
  "icons": {
    "16": "images/icon16.png",
    "48": "images/icon48.png",
    "128": "images/icon128.png"
  },
  "background": {
    "persistent": true,
    "scripts": [
      "js/background.js"
    ]
  },
  "browser_action": {
    "default_action": {
      "19": "images/icon19.png"
    },
    "default_title": "Qiita",
    "default_popup": "html/popup.html"
  },
  "permissions": [
    "cookies",
    "tabs",
    "https://qiita.com/*"
  ]
}
